{
    "name": "atlas-php/sandbox",
    "description": "Atlas sandbox for testing API functionality with real providers",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "atlas-php/atlas": "@dev",
        "orchestra/testbench": "^9.0|^10.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "larastan/larastan": "^3.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../",
            "options": {
                "symlink": true
            }
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint",
        "lint:test": "pint --test",
        "analyse": "phpstan analyse --memory-limit=512M",
        "check": [
            "@lint:test",
            "@analyse"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
