{
    "name": "atlas-php/sandbox",
    "description": "Atlas sandbox for testing API functionality with real providers",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "atlas-php/atlas": "@dev",
        "orchestra/testbench": "^9.0|^10.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../",
            "options": {
                "symlink": true
            }
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
